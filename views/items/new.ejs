<% include ../partials/header.ejs%>
<div class="container">
	<h1>Add New Item</h1>
	<form action="/items" method="post">
		<div class="form-group">
			<label for="item[name]">Name:</label>
			<input class="form-control" type="text" name="item[name]">
		</div>
		<div class="form-group">
			<label for="item[type]">Type:</label>
			<input class="form-control" type="text" name="item[type]">
		</div>
		<div class="form-group">
			<label for="item[description]">Description:</label>
			<input class="form-control" type="text" name="item[description]">
		</div>
		<div class="form-group">
			<label for="item[weight]">Weight:</label>
			<input class="form-control" type="number" name="item[weight]">
		</div>
		<div class="form-group">
			<label for="item[gold]">Gold:</label>
			<input class="form-control" type="number" name="item[gold]">
		</div>
		<div class="form-group">
			<label for="item[silver]">Silver:</label>
			<input class="form-control" type="number" name="item[silver]">
		</div>
		<div class="form-group">
			<label for="item[copper]">Copper:</label>
			<input class="form-control" type="number" name="item[copper]">
		</div>
		<button class="btn btn-primary form-control">Submit</button>
	</form>
</div>
<% include ../partials/footer.ejs%>
